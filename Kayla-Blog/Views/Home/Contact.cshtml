@*Start contact-page Area*@
<section class="contact-page-area">
	<div class="container">
		<div class="row contactPage">
			@*<div class="col-lg-4 d-flex flex-column address-wrap contactMe">
				<h4 class="text-center">Contact Me!</h4>
				<hr />
				<div class="single-contact-address d-flex flex-row">
					<div class="icon"><span class="lnr lnr-home"></span></div>
					<div class="contact-details">
						<h5 class="contactInfo">Greensboro, North Carolina</h5>
					</div>
				</div>
				<div class="single-contact-address d-flex flex-row">
					<div class="icon">
						<span class="lnr lnr-phone-handset"></span>
					</div>
					<div class="contact-details">
						<h5 class="contactInfo">(276) 336 1968</h5>
					</div>
				</div>
				<div class="single-contact-address d-flex flex-row">
					<div class="icon"><span class="lnr lnr-envelope"></span></div>
					<div class="contact-details">
						<h5 class="contactInfo">kayla_mcgraw@hotmail.com</h5>
					</div>
				</div>
			</div>*@
			<div class="col-8 blogIndex justify-content-center">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<h4 class="text-center">Send me a message</h4>
					<hr />
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
							<div class="col-md-5">
								@Html.TextBoxFor(m => m.FromName, new { @class = "form-control contactName", placeholder = "Name" })
								@Html.ValidationMessageFor(m => m.FromName)
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
							<div class="col-md-5">
								@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control contactEmail", placeholder = "example@email.com" })
								@Html.ValidationMessageFor(m => m.FromEmail)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
							<div class="col-md-12">
								@Html.TextBoxFor(m => m.Subject, new { @class = "form-control contactSubject", placeholder = "Subject" })
								@Html.ValidationMessageFor(m => m.Subject)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
							<div class="col-md-12">
								@Html.TextBoxFor(m => m.Body, new { @class = "form-control contactBody", placeholder = "Message" })
								@Html.ValidationMessageFor(m => m.Body)
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-offset-2 col-md-10">
							<input type="submit" class="btn btn-primary btnSend" value="Send" />
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>
@*End contact-page Area*@ 