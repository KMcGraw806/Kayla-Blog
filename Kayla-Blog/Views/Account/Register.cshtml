@model Kayla_Blog.Models.ExtendedRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container loginContainer">
    <div class="row">
        <div class="col-12">
			<br />
			<br />
			<br />
			<br />
			<br />
			<br />
            <div class="card">
                <div class="card-header text-center">
                    <h2>Create a new account.</h2>
                </div>
				<div class="card-body">
					@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
					{
						@Html.AntiForgeryToken()
						@Html.ValidationSummary("", new { @class = "text-danger" })
						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", @name = "FirstName", @class = "form-control loginBox" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", @name = "LastName", @class = "form-control loginBox" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.TextBoxFor(m => m.DisplayName, new { @placeholder = "Display Name", @name = "DisplayName", @class = "form-control loginBox" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @name = "Email", @class = "form-control loginBox" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @name = "Password", @class = "form-control loginBox" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12 registerBox">
								@Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @name = "ConfirmPassword", @class = "form-control loginBox" })
							</div>
						</div>
						<div class="form-group registerButton">
							<div class="col-6">
								<input type="submit" class="btn btn-primary btnWide" value="Register" />
							</div>
						</div>
					}

				</div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
